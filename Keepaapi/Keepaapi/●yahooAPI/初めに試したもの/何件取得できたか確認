import requests

# Yahoo!ショッピングAPIのURLとパラメータ
API_URL = "https://shopping.yahooapis.jp/ShoppingWebService/V3/itemSearch"
APP_ID = "dj00aiZpPXlkOGd5bDlUcTlWRyZzPWNvbnN1bWVyc2VjcmV0Jng9MmE-"
SELLER_ID = "hands-net"

params = {
    "appid": APP_ID,
    "seller_id": SELLER_ID,
    "results": 1,  # データは1件だけ取得してOK（件数だけ知りたいので）
    "start": 1
}

# API呼び出し
response = requests.get(API_URL, params=params)
data = response.json()

# 📊 全体のヒット件数を取得
total = data.get("totalResultsReturned")      # 実際に返された件数（今回は1）
available = data.get("totalResultsAvailable") # 検索条件に合致した商品総数（ここを使う）

print(f"🔎 全体のヒット件数: {available:,} 件")


